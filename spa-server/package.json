{
  "name": "spa-server",
  "version": "1.0.0",
  "description": "Single Page Application Server powered by Fastify",
  "repository": {
    "type": "git",
    "url": "https://github.com/nodm/monorepo-template.git"
  },
  "author": {
    "name": "nodm",
    "email": "nodm.pe@gmail.com"
  },
  "main": "dist/server.js",
  "scripts": {
    "start": "node serve",
    "build": "webpack",
    "lint": "tsc --noEmit && eslint \"**/*.ts\" --quiet --fix",
    "serve": "export $(grep -v '^#' .env | xargs) && node dist/server.js",
    "watch": "export $(grep -v '^#' .env | xargs) && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js"
  },
  "keywords": [
    "SPA",
    "Node",
    "Fastify"
  ],
  "license": "MIT",
  "engines": {
    "node": "12"
  },
  "dependencies": {
    "fastify": "^2.15.1",
    "fastify-static": "^2.6.0"
  },
  "devDependencies": {
    "@types/eslint": "^6.1.8",
    "@types/node": "^13.7.0",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "nodemon": "^2.0.2",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  }
}
